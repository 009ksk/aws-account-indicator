{
  "manifest_version": 3,
  "name": "AWS Account Indicator",
  "version": "1.0.0",
  "description": "AWSアカウントの識別を容易にするChrome拡張機能",
  
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*.amazonaws.com/*",
    "https://*.aws.amazon.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://*.amazonaws.com/*",
        "https://*.aws.amazon.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AWS Account Indicator Settings"
  },
  
  "options_page": "options.html",
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
